{
  "info": {
    "name": "Professor API - Testes de Filtros",
    "_postman_id": "filtros-professores-test",
    "description": "Collection para testar os novos filtros de busca e status implementados no endpoint GET /api/professores",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Listar TODOS os professores",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/professores",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "professores"]
        },
        "description": "Deve retornar todos os professores (ativos e inativos)"
      },
      "response": []
    },
    {
      "name": "2. Filtrar apenas ATIVOS",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/professores?ativo=true",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "professores"],
          "query": [
            {
              "key": "ativo",
              "value": "true",
              "description": "Filtrar apenas professores ativos"
            }
          ]
        },
        "description": "Deve retornar apenas professores com ativo=true"
      },
      "response": []
    },
    {
      "name": "3. Filtrar apenas INATIVOS",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/professores?ativo=false",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "professores"],
          "query": [
            {
              "key": "ativo",
              "value": "false",
              "description": "Filtrar apenas professores inativos"
            }
          ]
        },
        "description": "Deve retornar apenas professores com ativo=false"
      },
      "response": []
    },
    {
      "name": "4. Buscar por NOME - Maria",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/professores?nome=Maria",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "professores"],
          "query": [
            {
              "key": "nome",
              "value": "Maria",
              "description": "Busca case-insensitive por nome"
            }
          ]
        },
        "description": "Deve encontrar professores com 'Maria' no nome (case-insensitive)"
      },
      "response": []
    },
    {
      "name": "5. Buscar por NOME - santos (lowercase)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/professores?nome=santos",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "professores"],
          "query": [
            {
              "key": "nome",
              "value": "santos",
              "description": "Teste case-insensitive (deve encontrar 'João Santos')"
            }
          ]
        },
        "description": "Testa se a busca é case-insensitive"
      },
      "response": []
    },
    {
      "name": "6. COMBINAÇÃO - Nome 'Ana' entre ATIVOS",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/professores?nome=Ana&ativo=true",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "professores"],
          "query": [
            {
              "key": "nome",
              "value": "Ana"
            },
            {
              "key": "ativo",
              "value": "true"
            }
          ]
        },
        "description": "Deve encontrar apenas 'Ana Costa' (ativa)"
      },
      "response": []
    },
    {
      "name": "7. COMBINAÇÃO - Nome 'Pedro' entre INATIVOS",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/professores?nome=Pedro&ativo=false",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "professores"],
          "query": [
            {
              "key": "nome",
              "value": "Pedro"
            },
            {
              "key": "ativo",
              "value": "false"
            }
          ]
        },
        "description": "Deve encontrar apenas 'Pedro Souza' (inativo)"
      },
      "response": []
    },
    {
      "name": "8. Buscar nome inexistente",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/professores?nome=XYZ123",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "professores"],
          "query": [
            {
              "key": "nome",
              "value": "XYZ123",
              "description": "Nome que não existe no banco"
            }
          ]
        },
        "description": "Deve retornar array vazio []"
      },
      "response": []
    },
    {
      "name": "9. Buscar por nome parcial - 'Costa'",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/professores?nome=Costa",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "professores"],
          "query": [
            {
              "key": "nome",
              "value": "Costa",
              "description": "Busca parcial (deve encontrar 'Ana Costa')"
            }
          ]
        },
        "description": "Testa busca parcial do nome"
      },
      "response": []
    }
  ]
}

